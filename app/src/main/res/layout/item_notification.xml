<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_accent">

    <View style="@style/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/ic_alarm_grey600_36dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv"
            android:layout_alignTop="@+id/icon_iv"
            android:layout_toRightOf="@+id/icon_iv"
            android:layout_toEndOf="@+id/icon_iv"
            android:textColor="@drawable/selector_accent_text_gray"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="22sp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_alarm_tv"
            android:layout_below="@+id/name_tv"
            android:layout_toRightOf="@+id/icon_iv"
            android:layout_toEndOf="@+id/icon_iv"
            android:textColor="@drawable/selector_accent_text_gray"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:gravity="center_vertical" />

        </RelativeLayout>


</LinearLayout>