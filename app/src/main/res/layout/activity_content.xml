
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.edaviessmith.consumecontent.Content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <android.support.v7.widget.Toolbar
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                android:background="@color/primary"
                android:minHeight="@dimen/abc_action_bar_default_height_material"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/action_edit"
                    android:id="@+id/action_settings"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="@dimen/toolbar_item_padding"
                    android:paddingEnd="@dimen/toolbar_item_padding"
                    android:paddingLeft="@dimen/toolbar_item_padding"
                    android:paddingStart="@dimen/toolbar_item_padding"
                    android:contentDescription="@string/edit"
                    android:id="@+id/action_edit"
                    android:src="@drawable/ic_create_white_24dp"/>

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"/>


        </RelativeLayout>


        <fragment
            android:id="@+id/navigation_drawer"
            android:name="com.edaviessmith.consumecontent.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:layout="@layout/fragment_nav_drawer" />




    </android.support.v4.widget.DrawerLayout>

    <com.edaviessmith.consumecontent.view.VideoPlayerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_player_v">

        <View
            android:id="@+id/shade_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_v"
            android:background="@color/gray"
            android:tag="desc">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/item_list_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/card_view"
                    android:layout_alignParentTop="true" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_min_margin"
                    android:layout_marginLeft="@dimen/activity_min_margin"
                    android:layout_marginRight="@dimen/activity_min_margin"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/card_view" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:textSize="20sp"
                            android:id="@+id/video_title_tv"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:text="Video Title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_accent"
                            android:layout_below="@+id/video_title_tv"
                            android:id="@+id/video_views_tv"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Views" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_view"
                    android:id="@+id/content_v"
                    android:background="@android:color/white"
                    android:paddingTop="@dimen/activity_min_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/video_description_tv"
                        android:textSize="16sp"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:autoLink="web"/>

                    <View style="@style/divider" />
                </LinearLayout>

                <View style="@style/divider" android:layout_alignTop="@+id/content_v"/>

                <include layout="@layout/item_list_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_v" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/content_v"
                    android:id="@+id/video_date_tv"
                    android:textColor="@color/gray_accent"
                    android:layout_marginLeft="6dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="date"/>

                <com.edaviessmith.consumecontent.view.Fab
                    android:id="@+id/action_fab"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/content_v"
                    android:layout_marginTop="-36dp"
                    app:colour="@color/accent"
                    app:drawable="@drawable/ic_add_white_18dp"/>

            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/header_v">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:id="@+id/video_v" />

        </RelativeLayout>

    </com.edaviessmith.consumecontent.view.VideoPlayerLayout>

</RelativeLayout>