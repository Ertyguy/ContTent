<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notifications_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="22dp" >


        <LinearLayout
            android:id="@+id/all_notifications_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/selector_accent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray"
                android:text="@string/all_notifications"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/all_notifications_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false" />
        </LinearLayout>

        <View style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>


        <LinearLayout
            android:id="@+id/mobile_notifications_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/selector_accent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray"
                android:text="@string/enable_notification_on_mobile"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/mobile_notifications_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"/>
        </LinearLayout>


        <View style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>


        <LinearLayout
            android:id="@+id/vibrations_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/selector_accent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray"
                android:text="@string/vibrations_enabled"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/vibrations_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"/>
        </LinearLayout>

        <View style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>


        <LinearLayout
            android:id="@+id/play_sound_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/selector_accent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/dark_gray"
                android:text="@string/play_sound"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/play_sound_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"/>
        </LinearLayout>

        <View style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:id="@+id/schedule_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_accent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_schedule"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/name_tv"
                android:textColor="@color/dark_gray"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                android:gravity="center_vertical" />


            <ImageView
                android:id="@+id/icon_iv"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_today_grey600_36dp"/>

        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/item_list_divider"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/notifications_info"
        android:id="@+id/item_list_divider" />

    <com.edaviessmith.consumecontent.view.Fab
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/add_fab"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:colour="@color/accent"
        app:drawable="@drawable/ic_alarm_add_white_36dp"
        android:layout_alignBottom="@+id/item_list_divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>