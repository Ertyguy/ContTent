<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">


    <include android:id="@+id/channel_v" layout="@layout/item_youtube_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/twitter_v"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/twitter_login_help"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/twitter_login_tv"
            android:text="@string/sign_in"
            android:drawableLeft="@drawable/ic_twitter_white"
            android:drawableStart="@drawable/ic_twitter_white"
            android:drawablePadding="5dp"
            android:background="@color/blue_twitter"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="22dp"
            android:paddingEnd="22dp" />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/div_v"
        android:background="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/red_light"
        android:gravity="center"
        android:id="@+id/search_message_tv"
        android:padding="10dp"/>

</LinearLayout>